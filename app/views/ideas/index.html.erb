<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
      <!-- in_groups_of(n) return an n's element array-->
  <div class="row">
    <% group.compact.each do |idea| %> 
      <!-- compact return an array without nil -->
      <div class="span4">
        <%= image_tag idea.picture_url(:thumb) if idea.picture?%>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>



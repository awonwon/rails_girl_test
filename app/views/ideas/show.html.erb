<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6" style="text-align:center">
    <div class="">
    <%= image_tag(@idea.picture_url, width: "50%") if @idea.picture.present? %>
      <p><b>Name: </b><%= @idea.name%></p>
      <p><b>Description: </b><%= @idea.description %></p>
      <p>
        <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-success"%> |
        <%= link_to 'Destroy', @idea, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %> |
        <%= link_to 'Back', ideas_path, class: "btn btn-primary" %>
      </p>
    </div>
  </div>

  <!--comment-->
  <% if flash[:delete_comment]%>
    <script>alert("<%=flash[:delete_comment]%>");</script>
  <% end%>

  <div class="col-md-4" style="text-align:center">
    <h3>Comments</h3>
    <div id="list" style="margin-bottom:50px">
      <% @comments.each do |comment| %>
      <div class="thumbnail" style="text-align:left; padding:10px">
        <strong><%= comment.user_name %></strong> Says:
        </br>
        <p style="margin:10px"><%= comment.body %></p>
        <%if comment.user_name == current_user.email%>
          <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?'}%>
        <%end%>
      </div>
      <% end %>
    </div>
    <%= render 'comments/form' %>
  </div>


</div>




